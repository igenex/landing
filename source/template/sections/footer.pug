-var items = {'facebook-official' : 'facebook.com', 'twitter' : 'twitter.com', 'google-plus' : 'google.com', 'linkedin' : 'linkedin.com'};
footer.footer
    .footer__top
        .container
            .footer__title Get in touch
            .footer__links
                each item, index in items
                    a(href="http://" + item target="_blank").footer__social
                        i(class="fa fa-" + index aria-hidden="true")
                            span.visually-hidden= index
            .footer__text Subscribe to our newsletter to stay update with what is new
            form(action="#" method="post")
                .footer__field: input.footer__input(type="email" placeholder="Email Adress")
                button(type="submit").button Subscribe
    .footer__bottom
        .footer__copy Cssautor.com &copy; 2014 All right reserved
        script(src="js/main.min.js")